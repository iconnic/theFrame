<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:stateListAnimator="@anim/liftontouch"
    android:id="@+id/cardbanner1"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:clickable="true"
    android:layout_margin="4dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardElevation="0dp"
 	card_view:cardMaxElevation="0dp"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="0dp">

 	<RelativeLayout 
 	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:background="@color/white">
 	    
 	    <ImageView 
 	        android:id="@+id/pic"
 	        android:scaleType="centerCrop"
 	        android:layout_width="match_parent"
    		android:layout_height="match_parent"/>
 	    
 	    <com.iconnic.worktemplate.views.HeaderTextView 
 	        android:id="@+id/text"
 	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_above="@+id/text2"
    		android:layout_alignParentLeft="true"
    		android:layout_marginLeft="16dp"
    		android:layout_marginRight="16dp"
    		android:layout_marginBottom="2dp"
    		android:textColor="@color/white"
    		android:textSize="24dp"
    		android:shadowColor="@color/black"
	    	android:shadowRadius="4"
	    	android:shadowDx="0" 
	    	android:shadowDy="0"
    		android:text="Sample Text"/>
 	    
 	    <com.iconnic.worktemplate.views.IconnicTextView 
 	        android:id="@+id/text2"
 	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentBottom="true"
    		android:layout_alignParentLeft="true"
    		android:layout_marginLeft="16dp"
    		android:layout_marginRight="16dp"
    		android:layout_marginBottom="16dp"
    		android:textColor="@color/white"
    		android:textSize="12dp"
    		android:shadowColor="@color/black"
	    	android:shadowRadius="4"
	    	android:shadowDx="0" 
	    	android:shadowDy="0"
    		android:text="Sample Text"/>
 	    
 	    <com.iconnic.worktemplate.views.CircleImageView 
 	        android:id="@+id/pic2"
 	        android:scaleType="centerCrop"
 	        android:layout_alignParentBottom="true"
    		android:layout_alignParentRight="true"
    		android:src="@drawable/placeholder1"
    		android:layout_margin="16dp"
 	        android:layout_width="30dp"
    		android:layout_height="30dp"
    		app:civ_border_color="@color/white"
       		app:civ_border_width="1dp"/>
 	    
 	</RelativeLayout>

</android.support.v7.widget.CardView>