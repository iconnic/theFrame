<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:stateListAnimator="@anim/liftontouch"
    android:id="@+id/cardpostpic"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:clickable="true"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="18dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardElevation="0dp"
 	card_view:cardMaxElevation="0dp"
    card_view:cardCornerRadius="0dp"
    card_view:contentPadding="0dp">
    
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">

 	<LinearLayout 
 	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"
    	android:weightSum="20"
    	android:background="@color/white">
    	
 	    <RelativeLayout 
 	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
    	android:layout_weight="8"
    	android:background="@color/white">
    	
 	        <com.iconnic.worktemplate.views.HeaderTextView
	 	        android:id="@+id/texttop"
	 	        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_alignParentTop="true"
	    		android:layout_alignParentLeft="true"
	    		android:layout_marginTop="8dp"
	    		android:layout_marginLeft="8dp"
	    		android:layout_marginRight="0dp"
	    		android:layout_marginBottom="2dp"
	    		android:textColor="@color/black"
	    		android:textSize="32dp"
	    		android:text="17"/>
 	        
 	        <com.iconnic.worktemplate.views.HeaderTextView
	 	        android:id="@+id/textbottom"
	 	        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_below="@+id/texttop"
	    		android:layout_alignParentLeft="true"
	    		android:layout_marginLeft="8dp"
	    		android:layout_marginRight="8dp"
	    		android:layout_marginBottom="4dp"
	    		android:textColor="@color/black"
	    		android:textSize="14dp"
	    		android:text="Aug"/>
 	        
 	    </RelativeLayout>
    	
 	    
 	    <ImageView 
 	        android:id="@+id/pic"
 	        android:layout_weight="7"
 	        android:layout_margin="4dp"
 	        android:padding="4dp"
 	        android:scaleType="centerCrop"
 	        android:layout_width="match_parent"
    		android:layout_height="match_parent"/>
 	    
 	    <RelativeLayout 
 	        android:layout_weight="5"
 	        android:layout_width="match_parent"
    		android:layout_height="match_parent">
    		
	 	        <com.iconnic.worktemplate.views.HeaderTextView 
	 	        android:id="@+id/text"
	 	        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_alignParentTop="true"
	    		android:layout_alignParentLeft="true"
	    		android:layout_marginTop="8dp"
	    		android:layout_marginLeft="0dp"
	    		android:layout_marginRight="16dp"
	    		android:layout_marginBottom="4dp"
	    		android:textColor="@color/black"
	    		android:textSize="12dp"
	    		android:shadowColor="@color/unselected"
		    	android:shadowRadius="4"
		    	android:shadowDx="0" 
		    	android:shadowDy="0"
	    		android:text="Sample Text"/>
	 	        
	 	        
	 	        <com.iconnic.worktemplate.views.IconnicTextView 
	 	        android:id="@+id/text2"
	 	        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_alignParentBottom="true"
	    		android:layout_alignParentLeft="true"
	    		android:layout_marginLeft="0dp"
	    		android:layout_marginRight="16dp"
	    		android:layout_marginBottom="8dp"
	    		android:textColor="@color/black"
	    		android:textSize="8dp"
	    		android:text="Sample Text"/>
	 	        
 	    </RelativeLayout>
 	    
 	</LinearLayout>
 	
 	</RelativeLayout>

</android.support.v7.widget.CardView>