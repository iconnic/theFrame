<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="4dp"
    android:layout_height="84dp"
    android:layout_marginBottom="12dp"
    android:background="@color/white"
    android:id="@+id/headcase">
    
    <com.iconnic.worktemplate.views.CircleImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:id="@+id/headIcon2"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="16dp"
        android:paddingRight="4dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/img1"
        app:civ_border_color="@color/unselected"
		app:civ_border_width="1dp"/>

    <ImageView
        android:id="@+id/headIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/headIcon2"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/close"/>

    <com.iconnic.worktemplate.views.HeaderTextView
        android:id="@+id/headText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/headIcon"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/headIcon2"
        android:paddingLeft="12dp"
        android:text="The title"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16dp" />
 
</RelativeLayout>