<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:stateListAnimator="@anim/liftontouch"
    android:id="@+id/cardfullphoto1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:clickable="true"
    android:layout_margin="8dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardElevation="0dp"
 	card_view:cardMaxElevation="0dp"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="0dp">
    
    <LinearLayout android:weightSum="11" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout android:layout_weight="5" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/white">
 	    
 	    <com.iconnic.worktemplate.views.CircleImageView 
 	        android:id="@+id/pic2"
 	        android:scaleType="centerCrop"
 	        android:src="@drawable/img1"
 	        android:layout_alignParentLeft="true"
 	        android:layout_alignParentTop="true"
 	        android:layout_margin="8dp"
 	        android:layout_width="32dp"
    		android:layout_height="32dp"
       		app:civ_border_color="@color/light"
       		app:civ_border_width="1dp" />
 	    
 	    <com.iconnic.worktemplate.views.HeaderTextView 
	       android:id="@+id/name"
	       android:layout_height="wrap_content"
	       android:layout_width="wrap_content"
	       android:layout_toRightOf="@+id/pic2"
	       android:layout_marginTop="16dp"
	       android:gravity="left"
	       android:textSize="12dp"
	       android:textColor="@color/black"
	       android:text="UserName"/>
        
 	</RelativeLayout>    
        
 	<RelativeLayout android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/white">
 	    
 	    <ImageView 
 	        android:id="@+id/pic"
 	        android:scaleType="centerCrop"
 	        android:background="@drawable/placeholder1"
 	        android:layout_width="match_parent"
    		android:layout_height="match_parent"/>
 	    
 	</RelativeLayout>
 	
 	<RelativeLayout android:layout_weight="5" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/white">
 	    
 	    <com.iconnic.worktemplate.views.IconnicTextView 
	       android:id="@+id/text"
	       android:layout_height="wrap_content"
	       android:layout_width="wrap_content"
	       android:layout_alignParentLeft="true"
	       android:layout_alignParentBottom="true"
	       android:layout_marginLeft="8dp"
	       android:layout_marginBottom="4dp"
	       android:gravity="left"
	       android:textSize="8dp"
	       android:textColor="@color/dark"
	       android:text="2 DAYS AGO"/>
 	    
 	    <ImageView 
 	        android:id="@+id/pic3"
 	        android:scaleType="centerCrop"
 	        android:background="@drawable/heart2"
 	        android:layout_alignParentLeft="true"
	       	android:layout_alignParentTop="true"
	       	android:layout_marginTop="4dp"
	       	android:layout_marginLeft="8dp"
 	        android:layout_width="24dp"
    		android:layout_height="24dp"/>
 	    
 	    <ImageView 
 	        android:id="@+id/pic4"
 	        android:scaleType="centerCrop"
 	        android:background="@drawable/msg"
 	        android:layout_toRightOf="@+id/pic3"
	       	android:layout_alignParentTop="true"
	       	android:layout_marginTop="4dp"
	       	android:layout_marginLeft="12dp"
 	        android:layout_width="24dp"
    		android:layout_height="24dp"/>
 	    
 	</RelativeLayout>
 	
 	</LinearLayout>

</android.support.v7.widget.CardView>